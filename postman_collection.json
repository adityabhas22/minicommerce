{
  "info": {
    "name": "minicommerce",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080"},
    {"key": "userId", "value": "user123"},
    {"key": "productId", "value": ""},
    {"key": "orderId", "value": ""},
    {"key": "paymentId", "value": ""},
    {"key": "orderAmount", "value": ""},
    {"key": "query", "value": "laptop"}
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create product",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {"raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop\",\n  \"description\": \"Gaming Laptop\",\n  \"price\": 50000.0,\n  \"stock\": 10\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.collectionVariables.set('productId', pm.response.json().id);"
                ]
              }
            }
          ]
        },
        {
          "name": "List products",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"]}
          }
        },
        {
          "name": "Search products",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/products/search?q={{query}}", "host": ["{{baseUrl}}"], "path": ["api", "products", "search"], "query": [{"key": "q", "value": "{{query}}"}]}
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Add to cart",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {"raw": "{{baseUrl}}/api/cart/add", "host": ["{{baseUrl}}"], "path": ["api", "cart", "add"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "Get cart",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/cart/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "cart", "{{userId}}"]}
          }
        },
        {
          "name": "Clear cart",
          "request": {
            "method": "DELETE",
            "url": {"raw": "{{baseUrl}}/api/cart/{{userId}}/clear", "host": ["{{baseUrl}}"], "path": ["api", "cart", "{{userId}}", "clear"]}
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {"raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api", "orders"]},
            "body": {"mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\"\n}"}
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.collectionVariables.set('orderId', pm.response.json().id);",
                  "pm.collectionVariables.set('orderAmount', pm.response.json().totalAmount);"
                ]
              }
            }
          ]
        },
        {
          "name": "Get order",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/orders/{{orderId}}", "host": ["{{baseUrl}}"], "path": ["api", "orders", "{{orderId}}"]}
          }
        },
        {
          "name": "Order history",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/orders/user/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "orders", "user", "{{userId}}"]}
          }
        },
        {
          "name": "Cancel order",
          "request": {
            "method": "POST",
            "url": {"raw": "{{baseUrl}}/api/orders/{{orderId}}/cancel", "host": ["{{baseUrl}}"], "path": ["api", "orders", "{{orderId}}", "cancel"]}
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create payment",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {"raw": "{{baseUrl}}/api/payments/create", "host": ["{{baseUrl}}"], "path": ["api", "payments", "create"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"amount\": {{orderAmount}}\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.collectionVariables.set('paymentId', pm.response.json().paymentId);"
                ]
              }
            }
          ]
        },
        {
          "name": "Webhook",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {"raw": "{{baseUrl}}/api/webhooks/payment", "host": ["{{baseUrl}}"], "path": ["api", "webhooks", "payment"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"paymentId\": \"{{paymentId}}\",\n  \"status\": \"SUCCESS\"\n}"
            }
          }
        }
      ]
    }
  ]
}
